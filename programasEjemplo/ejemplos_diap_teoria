proc main()
	i = 7;
	v[i] = 1111;
end proc;

//Ej5
type Circulo
	x as integer;
	y as integer;
	radio as real;
end type;

dim v[4] as real;
dim i as integer;
dim diana as Circulo;

proc main()
	i = 0;
	diana.y = 7;
	diana.x = diana.y + i;
	v[0] = 1.618033;
	diana.radio = v[i] + 2.0;
	print v[i + 2];
	print v[diana.y - 7];
end proc;