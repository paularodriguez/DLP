	dim a as integer;
	dim b as integer;
	
	a = 37;
	read b;
end proc;

//Ej2
dim a as integer;
dim b as real;
dim c as character;

function ejemplo(par1 as real, par2 as integer) as integer	
	
	dim local1 as integer;
	dim local2 as real;
	b = 3.4;
	par1 = 3.4;
	local2 = 3.4;
	return par2 + a + local1;
	
end function;

proc main()
	print a + ejemplo(1.5, 27);
end proc;

//Ej3
type Persona
	sueldo as real;
	edad as integer;
	inicial as character;
end type;

dim a as character;

dim carlos as Persona;
dim javi as Persona;

proc main()
	carlos.edad = 20;
	javi.edad = 20;
end proc;

//Ej4
